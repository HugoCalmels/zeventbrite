<html lang="en">
  <head>
    
  </head>
  <body>
    

<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Share an Event</h1>
        <p class="lead text-muted">The fastest way to find the best events</p>
        <p>
          <a href="#" class="btn btn-primary my-2">Join</a>
          <a href="#" class="btn btn-secondary my-2">Explore</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @events.each do |event| %>
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title></svg>

            <div class="card-body">
              <p class="card-text"><%= event.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <%= link_to "View", landing_path(event.id), class: 'btn btn-sm btn-outline-secondary'%>
              
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>

        <% end %>
        
      </div>
    </div>
  </div>

</main>


      
  </body>
</html>