

<div class="container">

    <div class="d-flex flex-row justify-content-center">

      <div class="col-md-8">
          <div class="card">

              <div class="card-header">

              <%= @event.title %>

              </div>

              <div class="card-body">

              <p class="lead">
                  <%= @event.description %>
              </p>

              <p class="lead">
                  <%= @event.start_date %>
              </p>

              <p class="lead">
                 <%= @event.duration %>
              </p>

              <p class="lead">
